{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": false,
    "removeComments": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
